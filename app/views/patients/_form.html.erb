<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname, label: "First Name"%>
    <%= f.input :lname, label: "Last Name" %>
    <%= f.input :dob, start_year: Date.today.year - 110, end_year: Date.today.year, label: "Date of Birth" %>
    <!-- hash invert function to show the description tied to the enum instead of the actual enum itself -->
                            Sex
    <%= f.select :sex, options_for_select(Patient.sexes_hash.invert), include_blank: true, label: "Sex" %>
  </br>
    <%= f.input :weight %>
    <%= f.association :breed %>
    <%= f.select :user_id, options_for_select(User.pluck( :fname, :id)) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
