<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :dob %>
    <%= f.input :sex %>
    <%= f.input :weight %>
    <%= f.association :breed %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
