<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :dob %>
    <!-- hash invert function to show the description tied to the enum instead of the actual enum itself -->
    <%= f.select :sex, options_for_select(Patient.sexes_hash.invert) %>
    <%= f.input :weight %>
    <%= f.association :breed %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
