<div class="drugs_index_wrapper">
<p id="notice"><%= notice %></p>
<h1 id="drugs">Drugs</h1>
<div class="drug_search">
<%= simple_form_for(drugs_path, method: "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Drugs" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Commerical name</th>
      <th>Class</th>
      <th>Category</th>
      <th>Concentration (mg/ml)</th>
      <th>Adverse Effects</th>
      <th>Route of Administration</th>
      <th>Pronunciation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td><%= drug.name %></td>
        <td><%= drug.commercial_name %></td>
        <td><%= drug.klass %></td>
        <td><%= drug.category %></td>
        <td><%= drug.concentration %></td>
        <td><%= drug.adverse %></td>
        <td><%= drug.route_of_admin_expand %></td>
        <td><%= drug.pronunciation %></td>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drug', new_drug_path %>
</div>
